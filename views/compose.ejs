    <h1>Compose</h1>

    <form action="/compose" method="post">
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" name="postTitle">
            <label>Post</label>
            <textarea class="form-control" style="height: 100px" name="postEntry"></textarea>
